pkgname=st
pkgver=0.8.4
pkgrel=6
pkgdesc="ST by suckless"
url="http://st.suckless.org"
arch=('i686' 'x86_64')
license=('MIT')
options=(zipman)
depends=('libxinerama' 'libxft')
source=(https://github.com/eatmyvenom/st/raw/main/st.tar.gz)
sha256sums=('SKIP')

build() {
  cd "$srcdir/"
  make 
}

package() {
  cd "$srcdir/"
  make PREFIX=/usr DESTDIR="$pkgdir" install
}
